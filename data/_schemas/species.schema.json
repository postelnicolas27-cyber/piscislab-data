{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PiscisLab – Species schema",
  "description": "Schéma de validation pour les espèces de poissons (données publiques, lecture seule).",
  "type": "object",
  "required": [
    "meta",
    "items"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "project",
        "type",
        "version",
        "readonly"
      ],
      "properties": {
        "project": {
          "type": "string",
          "const": "PiscisLab"
        },
        "type": {
          "type": "string",
          "const": "species"
        },
        "version": {
          "type": "string"
        },
        "readonly": {
          "type": "boolean",
          "const": true
        }
      },
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "label"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Identifiant unique de l'espèce"
          },
          "label": {
            "type": "string",
            "description": "Nom commun de l'espèce"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}